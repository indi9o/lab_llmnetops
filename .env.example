# --- NetBox Core Settings ---
ALLOWED_HOSTS=*
SECRET_KEY=change_me_to_a_random_secret_key
FIELD_ENCRYPTION_KEY=change_me_to_a_random_encryption_key
# API Token Pepper (min 50 chars)
API_TOKEN_PEPPER_1=change_me_to_a_random_pepper_string_minimum_50_chars_length

# --- Database (Postgres) ---
# Used by NetBox
DB_NAME=netbox
DB_USER=netbox
DB_PASSWORD=change_me_db_password
DB_HOST=postgres
DB_PORT=5432
# Used by Postgres Container
POSTGRES_USER=netbox
POSTGRES_PASSWORD=change_me_db_password
POSTGRES_DB=netbox

# --- Redis ---
# Used by NetBox
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6379
REDIS_CACHE_PASSWORD=change_me_redis_password
# Used by Redis Containers (shared password)

# --- NetBox MCP ---
NETBOX_URL=http://netbox:8080
NETBOX_TOKEN=change_me_netbox_token

# --- LLM Client ---
MCP_SERVER_URL=http://127.0.0.1:38001/sse
OLLAMA_HOST=http://127.0.0.1:11434
MODEL_NAME=llama3.1:latest
